template(name="orgHome")
  if org

    h2 {{org.name}}
    h4 {{org.description}}

    if isInRole 'admin' org._id
      +orgAdmin
    
  else
    h4 No organization here -
      a(href="{{pathFor 'newOrganization'}}") Create one?
  
template(name="orgAdmin")
  .panel-group
    .panel.panel-default
      .panel-heading
        h4.panel-title
          a(data-toggle="collapse", href="#edit-org-panel") Edit Organization Information
      #edit-org-panel.panel-collapse.collapse
        .panel-body
          +quickForm collection=orgs doc=org id="update-org-form" type="update"
    .panel.panel-default
      .panel-heading
        h4.panel-title
          a(data-toggle="collapse", href="#manage-users-panel") Manage users
      #manage-users-panel.panel-collapse.collapse
        .panel-body
          h5 Admins
            each orgAdmins
              +orgUser
          h5 Users
            each orgUsers
              +orgUser
            else
              p None
            +invite orgId=org._id
              
template(name="orgUser")
  div
    each emails
      span {{address}}
      