makeButton(color, text, shadow = 0)
  color text
  darker = darken(color, 10%)
  background color
  border 1px solid darker
  transition .2s
  font-weight 300
  letter-spacing 0.03em
  text-shadow 0 1px 0 rgba(shadow,shadow,shadow,.3)
  &:hover,
  &:focus
    background darker
    color white
    transition .2s
    border-color darker
  &:active
    background darken(color, 20%)

.leaflet-canvas
  margin-top -70px
  min-width 100%
  height 350px

.leaflet-search
  margin-top 16px
  border 1px solid transparent
  border-radius 2px 0 0 2px
  box-sizing border-box
  -moz-box-sizing border-box
  height 32px
  outline none
  box-shadow 0 2px 6px rgba(0, 0, 0, 0.3)
  background-color #fff
  padding 0 11px 0 13px
  width 300px
  font-family Roboto
  font-size 15px
  font-weight 300
  text-overflow ellipsis

.type-selector
  color #fff
  background-color #4d90fe
  padding 5px 11px 0px 11px

.type-selector label
  font-family Roboto
  font-size 13px
  font-weight 300

.form-group label
  width 300px

.location-btns
  margin-top 15px
  margin-bottom 25px

.leaflet-locate
  makeButton(#377BB5, white)
  
.leaflet-clear
  makeButton(#ebebeb, #333, 255)

@media (max-width: 992px)
  .leaflet-canvas
    margin-top 20px
  .location-btns
    button
      margin-bottom 10px
      padding 15px