.leaflet-canvas
  min-width 100%
  height 300px

.leaflet-search
  margin-top 16px
  border 1px solid transparent
  border-radius 2px 0 0 2px
  box-sizing border-box
  -moz-box-sizing border-box
  height 32px
  outline none
  box-shadow 0 2px 6px rgba(0, 0, 0, 0.3)
  background-color #fff
  padding 0 11px 0 13px
  width 300px
  font-family Roboto
  font-size 15px
  font-weight 300
  text-overflow ellipsis

.type-selector
  color #fff
  background-color #4d90fe
  padding 5px 11px 0px 11px

.type-selector label
  font-family Roboto
  font-size 13px
  font-weight 300

.form-group label
  width 300px

.btn-group button
  margin 16px
