template(name='leaflet')
  div(data-schema-key=schemaKey)
    input.source(type='hidden')
    .col-md-6
      .form-group
        .row
          h4.form-group-header Degrees Decimal
          .col-md-6
            label(for='lon') Longitude
            input.lon.form-control(name='lon')
          .col-md-6
            label(for='lat') Latitude
            input.lat.form-control(name='lat')
        .row
          h4.form-group-header Degrees / Minutes / Seconds
          .col-md-6
            h5 Longitude
            .row
              .col-md-4
                label(for='degreesLon') degrees:
                input.degreesLon.form-control(name='degreesLon')
              .col-md-4
                label(for='minutesLon') minutes:
                input.minutesLon.form-control(name='minutesLon')
              .col-md-4
                label(for='secondsLon') seconds:
                input.secondsLon.form-control(name='secondsLon')
        .row
          .col-md-6
            h5 Latitude
            .row
              .col-md-4
                label(for='degreesLat') degrees:
                input.degreesLat.form-control(name='degreesLat')
              .col-md-4
                label(for='minutesLat') minutes:
                input.minutesLat.form-control(name='minutesLat')
              .col-md-4
                label(for='secondsLat') seconds:
                input.secondsLat.form-control(name='secondsLat')
        .row
          h4.form-group-header Universal Transverse Mercator
          .col-md-4
            label(for='easting') Easting
            input.easting.form-control(name='easting')
          .col-md-4
            label(for='norting') Northing
            input.northing.form-control(name='northing')
          .col-md-4
            label(for='zone') Zone
            input.zone.form-control(name='zone')
        .row
          .col-md-4
            label(for='country') Country
            input.country.form-control(name='country')
    .col-md-6
      div
        //- input.leaflet-search.map-controls(type='text')
        div.leaflet-canvas
        .btn-group
          button.leaflet-locate.btn.btn-default My location
          button.leaflet-clear.btn.btn-default Clear
