secondary = #3F88A0

.group-info
  h1
    margin-bottom 25px
  h2
    font-size 24px
    color secondary
  ul
    margin-bottom 20px
  img
    max-width 200px
    display inline-block
    margin 10px
    opacity .9
    transition opacity .2s
    border 2px solid transparent
    border-radius 3px
    &:hover,
    &:focus
      opacity 1
      transition opacity .2s
      border 2px solid secondary

.create-group
  h2
    text-align center

@media (max-width: 460px)
  .group-info
    img
      min-width 100%