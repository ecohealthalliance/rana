footer
  position absolute
  bottom 0
  z-index 100
  width 100%
  background header-footer-BG
  height footer-height
  h1,
  h2
    margin 0

.footer-nav
  position absolute
  top 50%
  left 50%
  li
    padding-right 10px
    border-right 1px solid secondary-dark 
    &:last-of-type
      border 0
  centerPosition()
  a
    color white
    @extend .dark-shadow
    &:hover,
    &:focus
      color body-text
      text-decoration none
      shadow(255,.1)
      
.logos
  clearFix()

.logo
  p
    display inline-block
    color l-gray
    font-size 11px

.mantle
  float left
  display inline-block

.mantle
  float left
  margin-top footer-padding
  h1
    bg('images/mantle-logo', 130px, 32px,'png')
    centerSmall(10px)

.eha
  float right
  margin-top footer-padding+8px
  h2
    bg('images/eha-logo', 220px, 54px,'png')
    centerSmall()
      
@media (max-width: 765px)

  .logo
    padding 0
  
  .mantle
    text-align left
    float left
    margin 0
    h1
      changeBGSize(90px, 23px)
      margin 0

  .eha
    margin-top 12px
    float right
    h2
      changeBGSize(150px, 38px)
      margin 0
      
  .footer
    width 100%

  .footer-nav
    centerPosition(0,0)
    position static
    text-align center
    padding 30px
    background #3F88A0
    margin-right -15px
    margin-left -15px
    top auto
    left auto
    transform initial
    li
      border-right 0
      padding 0
      margin-right 3px
      &:last-of-type
        margin 0
      a
        display block
        background darken(secondary, 8%)
        padding 12px 18px
        border-radius 3px
        &:active
          background darken(secondary, 15%)
          
          
