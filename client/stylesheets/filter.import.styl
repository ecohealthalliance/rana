.filter-controls
  padding 10px
  background ll-gray
  border-radius 4px
  border 1px solid darken(ll-gray, 10%)

.filter-panel
  position relative

.reset-wrap
  padding 0

.filter
  margin-top 20px
  margin 10px auto
  padding-top 20px
  border-top 1px solid l-gray
  
.group-wrap,
.filter-wrap
  margin 10px

.reports-table
  .group-wrap,
  .filter-wrap
    margin 0
  .filter-wrap
    &::after
      clearFix()

.toggle-filter
  margin-bottom 10px
.autoform-array-item
  position relative
  float left
  width 23%
  padding 20px
  background white
  border 1px solid darken(ll-gray,10%)
  border-radius 3px
  margin 1%
  min-height 250px
  box-shadow 0 1px 2px rgba(100,100,100,.1)
  h3
    display none

.autoform-remove-item
  position absolute
  top -17px
  right -27px
  font-size 28px
  color d-gray
  &:hover
    color strong-primary
  
.autoform-add-item
  float left
  width 23%
  background white
  border 1px solid darken(ll-gray,10%)
  border-radius 3px
  margin 1%
  text-align center
  position relative
  min-height 265px
  padding 20px
  span
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    font-size 40px    
    color m-gray
    transition()
  &:hover
    background darken(ll-gray, 2%)
    transition()
    span
      color darken(m-gray, 10%)
      transition()
  
#control-panel
  position absolute
  left 50px
  top 10px
  z-index 200
  max-width 25%
  min-width 20%
  border-radius 5px
  max-height 100%
  overflow-y auto
  overflow-x hidden
  box-shadow 0 1px 5px rgba(0,0,0,0.3)
  background rgba(255,255,255,.8)

.toggler
  display block
  border-top 1px solid m-gray
  padding 10px
  font-size 16px
  font-weight 600
  position relative
  color body-text
  transition()
  &:after
    content '+'
    position absolute
    right 5px
    transform translate(-50%, 0)
  &:hover
    background-color strong-primary
    color white
    text-decoration none
    transition()
  &:first-of-type
    border 0

.toggler.active
  background-color secondary
  color white
  text-decoration none
  &:after
    content '-'
  &:hover
    background-color strong-primary
    color white
    text-decoration none
