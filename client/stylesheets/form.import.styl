s-blue = #E9F0F8
s-red = #FCE6E8
s-green = #E7F6F2
s-yellow = #FFF8E7
s-gray = #F5F5F5

.date-location
  .panel-body
    overflow  hidden

.minor-label
  font-size 90%
  color #999
  font-weight normal

.minor-label-block
  @extend .minor-label
  display block

.row
  margin-bottom 0

.form-group
  margin-bottom 0
  label
    width auto

section
  padding 40px 0
  &.yellow
    background s-yellow
  &.red
    background s-red
  &.odd
    background s-gray
  &:first-child
    padding-top 20px
  &.short-padding
    padding 30px 0
  &.instructions
    padding-top 30px
    padding-bottom 20px
    margin-top 30px
    border-top 2px solid l-gray
    h2
      margin-bottom 5px
    p
      color d-gray
      font-size 110%
      span
        color strong-primary
        font-weight bold
        font-size 15px

h2
  font-size 32px
  color primary
  margin-bottom 20px
  margin-top 0
  
h3
  font-size 20px
  margin-top 0
  margin-bottom 15px
  color secondary

h2.section-title
  font-size 40px
  margin-top 0

h2 a.more-info
  font-size 12px
  color btn-default

.form-control
  margin-bottom 15px

.panel
  margin-bottom 0

.block
  display block
  
.map
  width 100%
  min-height 300px
  background lightblue
  
.no-margin-btm
  margin-bottom 0

a
  cursor pointer

textarea
  display block
  min-width 100%
  min-height 200px
  margin-top 5px
  
.add-subtract
  padding 5px
  font-size 10px
  
.no-padding
  padding 0

.panel-intro
  padding 15px

.location-info
  .form-group-header
    margin-bottom 12px
    font-size 14px
    font-weight bold
  .form-group
    margin-bottom 15px
  label
    color #666
    font-size 13px
  .row:last-child,
  .form-group:last-child
      margin-bottom 0

.content-panel
  @extend .no-padding
  border 2px solid border-gray
  .list-group-item
    @extend .no-padding
    border-left 0
    border-right 0
    border-bottom 0
  h3
    font-size 14px
    margin 0
    display inline-block
    font-weight bold
    line-height 1.42857143

  .panel-heading
    background white
    label
      margin-bottom 0

.panel > .list-group
  margin-bottom 0px

.content-block
  padding 20px 15px 0 15px
  font-size 13px
  .list-group-item
    position relative
    &:first-child
      border-top 0
  fieldset
    > div:first-child
      margin-bottom 20px
      label
        display none
      .form-group label
        display block
    legend
      display none
    > div:last-child
      margin-bottom 15px
    div:last-child
      > label
        margin-bottom 0
          
  .autoform-remove-item
    position absolute
    top 20px
    right 0px
    makeButton(#f9f9f9, m-gray, true)
  .form-group.file-upload .btn,
  .form-control
    width 80%
    margin 0
    makeButton(btn-default)
    color white
    font-weight 300
    letter-spacing .03em
  input[type=text].form-control
    background white
    color body-text
    border 1px solid #ccc
    
.file-upload-clear
  display inline-block
  margin-top 5px
  padding-left 5px
  
.add-content
  makeButton(#f9f9f9, m-gray, true, true)
  @extend .light-shadow
  margin-bottom 15px
  display block
  text-align center
  padding 8px
  width 100%
  border 0
  border-top 1px solid #DDD
  border-bottom 1px solid #DDD
    
.tooltipped
  cursor pointer
  &:hover
    .infoIcon
      color strong-primary

.padded-block
  padding 15px
  background #f9f9f9
  margin-left 0
  margin-right 0
  &:last-child
    border 0

.tall-block
  min-height 300px
.short-block
  min-height 150px

.af-checkbox-group
  .checkbox
    &:last-child
      margin-bottom 0

.study
  section
    &:first-child
      padding-top 50px
      padding-bottom 10px
      h3
        margin-top 0
  .form-group
    > label
      color #333
      font-weight 600
      font-size 15px
  .file-upload
    margin-top 10px

.csvUpload
  margin-top 15px
  h3
    margin-bottom 5px  

.check-list
  .list-group-item
    margin-bottom 15px
  .list-group
    input
      width 70%
    button
      width 20%

.publication,
.form-grp-container
  .form-group
    margin-bottom 30px
.publication
  .form-group
    float left
    width 40%
    &:last-child
      clear both
      float none
      width 75%
      margin-bottom 0
    .form-group
      width 100%

.file-upload
  .btn,
  label.btn
    makeButton(btn-default, white, false, true)
    font-weight normal

.import-table
  margin-top -30px
  table
    margin 20px 0

#toast-container > .toast
  opacity 1.0
  a
    color lightblue
  a:hover
    color lightblue
    text-decoration underline

.required
  &::after
    content '*'
    display inline-block
    color strong-primary
    padding-left 2px

.has-error .form-control
  border-color strong-primary
  margin-bottom 0
  
.has-error .help-block
  color strong-primary

.has-error
  label
    color strong-primary

@media (max-width: 992px)
  .panel
    .btn,
    button,
      padding 12px
    input
      min-height 47px
  .input-block
    margin-bottom 45px
    &:last-child
      margin-bottom 0
      
@media (max-width: 765px)
  .input-block
    .panel
      margin-left -15px
      margin-right -15px
      border-right 0
      border-left 0
      border-bottom 0
      border-radius 0
      .panel-heading
        background #ebebeb
  .tall-block
    min-height 0
  .short-block
    min-height 0
  .publication
    .form-group
      float none
      width 100%
      &:last-child
        width 100%
  .file-upload
    .btn,
    label.btn
      width 100%
      padding 12px
  h3
    margin-top

