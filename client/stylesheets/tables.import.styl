.table > tbody > tr > td
  vertical-align middle

.reactive-table-options
  width 100%
  margin-bottom 10px
  padding 0
  float none
  &::after
    clearFix()

.pull-right > .dropdown-menu
  left 0

.reports-table .reactive-table-columns-dropdown, .studies .reactive-table-columns-dropdown
  float left !important
  padding 0
  button
    float none
    
.reactive-table-filter
  width 33%
  padding 0

.table-wrap
  .reactive-table-options
    display none
    
.reports-table
  h1
    margin 0
  .reactive-table-columns-dropdown
    float left
    padding 0
    width 100%
    button
      float right
  .pull-right > .dropdown-menu
    left auto
  .positioned
    position absolute
    z-index 200
  .filter-controls
    margin 10px 0

.showingOpts
  &::after
    @extend .icons
    vAlign()
    content 'x'
    font-size 120%
    padding-left 5px
    
.reactive-table-navigation 
  .form-inline input
    vertical-align initial