.table > tbody > tr > td
  vertical-align middle

.reactive-table
  font-size 13px
  th
    color d-gray
  .controls
    width auto

.reactive-table-options
  width 100%
  margin-bottom 10px
  padding 0
  float none
  &::after
    clearFix()

.pull-right > .dropdown-menu
  left 0

.reports-table .reactive-table-columns-dropdown, .studies .reactive-table-columns-dropdown
  float left !important
  padding 0
  button
    float none
    
.reactive-table-filter
  width 33%
  padding 0

.table-wrap
  .reactive-table-options
    display none
    
.reports-table
  h1
    margin 0
  .reactive-table-columns-dropdown
    float left
    padding 0
    width 100%
    button
      float right
  .pull-right > .dropdown-menu
    left auto
  .positioned
    position absolute
    z-index 200
  .filter-controls
    margin 10px 0

.showingOpts
  &::after
    @extend .icons
    vAlign()
    content 'x'
    font-size 120%
    padding-left 5px
    
.reactive-table-navigation 
  .form-inline input
    vertical-align initial

.controls
  text-align right
  vertical-align middle

.control
  vAlign()
  padding 5px 3px   
  color secondary
  &:hover
    color primary
  &:before,
  &:after
    @extend .font-awesome
    font-size 22px
    vAlign()    
    content ''
    line-height 0
  &.remove
    color primary-strong
    &:before
      content '\f014'
  &.view
    &:before
      content '\f002'
  &.btn-edit
    &:before
      content '\f044'    
      padding-top 2px
  &.btn-add-report
    position relative
    &:hover
      &:before
        color darken(primary, 10%)
    &:before
      content '\f067'
      font-size 12px
      position absolute
      left 7px
      top 17px
      color darken(secondary, 10%)
    &:after
      content '\f016'

@media (max-width: 768px)
 
  .reactive-table-filter
    width 40%
    padding 0
    
@media (max-width: 768px)
  .reports-table
    h1
      margin-bottom 15px
    .toggle-filter
      width 100%
      margin-bottom 25px
      padding 10px
  .reactive-table
    thead
      display none
    tr
      position relative
      display block
      padding 15px 0
      min-height 30px
      border-bottom 1px solid l-gray
      background white !important
      &:first-child
        border-top 1px solid l-gray
    td
      display none
      border-top 0 !important
      &:first-child
        display block
        padding-right 50%        
    .controls
      display block
      position absolute
      right 0
      top 50%
      centerPosition(0,-50%)
      width 50%
      text-align right
      padding 0
      &:hover,
      &:focus
        background white
      .btn
        margin 0 2px
        &:last-of-type
          margin-right 0
    tr:last-child td:first-child
      border 0
  .reactive-table-filter
    padding 10px 0 10px 0
    width 100%
  .reactive-table-options
    margin 0
    padding 0
    .dropdown-toggle
      display none
  .reactive-table-input
    padding 20px 10px
  .next-page
  .page-number
    width 100%
    float none
    label 
      display none
    .previous-page,
    .next-page
      display block
      width 45%
      float left
      background secondary
      text-align center
      padding 10px
      color white
      border-radius 3px
      cursor pointer
      &:focus,
      &:hover
        background darken(secondary, 15%)
        border primary
        color white
      
    .next-page
      float right
      
  .rows-per-page
    display none
