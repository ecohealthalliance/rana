header
  position relative
  z-index 100
.navbar
  @extend .dark-shadow
  margin-bottom 0
  background header-footer-BG
  border 0
  border-radius 0
  min-height header-height
  .btn,
  .btn-default
    padding 6px 12px
    border 0
    margin-left 5px
    text-shadow none
    font-size 13px
    color body-text
    line-height 1.42857143
    buttonHover(nav-hover, trans-white)
    transition()
    &:focus
      outline primary
      transition()
      
.nav
  float right

.nav .open>a, 
.nav .open>a:hover
  background primary

.navbar-nav
  margin-right 10px
  > li > a
    color white
    buttonHover(nav-hover)
    font-size 13px
    i
      vAlign()
      font-size 16px
  .admin-settings
    i
      font-size 20px

.dropdown
  .dropdown-toggle
    &::after
      content: '\f0d7'
      @extend .font-awesome
      padding-left 4px
      line-height 0
  
  &.open
    .dropdown-toggle
      background primary
      &:focus
        background primary
      &::after
        content: '\f0d8'

.dropdown-menu
  background nav-hover
  > li 
    border-bottom 1px solid primary-dark
    &:last-of-type
      border 0
    > a
      color white
      padding 10px 15px
      &:hover
        background secondary
        color white

.navbar-nav .active a,
.navbar-nav .active a:focus
  background nav-hover
  outline 0
  
.navbar-brand 
  padding 5px 0
  h1
    margin 0
    color white
    font-weight 600
    text-transform uppercase
    line-height 18px
    font-size 18px
    vAlign()
    padding-left 3px
  span
    @extend .icons
    padding-top 1px
    font-size 35px
    color white
    line-height 0
    vAlign()

.navbar-btn
  margin 0

.navbar-toggle
  @extend .icons
  float right
  padding 4px
  margin 0
  color white
  font-size 28px

.main-nav-last
  margin-right 0

.fa-gear
  font-size 20px

  
     
@media (max-width: 1000px) 
  .navbar-header
    float none
  .navbar-left,
  .navbar-right
    float none !important
  .navbar-toggle
    display block
  .navbar-fixed-top
    top 0
    border-width 0 0 1px
  .navbar-collapse.collapse
    display none !important
    height 1px !important
  .navbar-nav
    float none !important
    margin-top 7.5px
  .navbar-nav>li
    float none
  .navbar-nav>li>a
    padding-top 10px
    padding-bottom 10px
  .collapse.in
    display block !important
    height auto !important

  .nav
    float none
    li
      border-bottom 1px solid secondary-light 
      &.account
        margin-left 0
        border 0 
      &.main-nav-last
        margin 0
      .btn
        width 40%
        margin 15px
        padding 10px
        display block
        float left
      &:last-of-type
        border 0
      a
        &:hover
          background primary
  .navbar-brand
    width 75%
    padding-top 10px
    span
      font-size 25px
    h1
      font-size 14px
      line-height 14px
  .navbar-nav
    margin-right 0
    margin-top 0
  .navbar .btn, .navbar .btn-default
    margin-left auto
  .container>.navbar-header
    margin 0
  .navbar-collapse
    padding-right 0
    border-top 4px solid secondary-dark
    box-shadow none
    &.in
      border-top 4px solid secondary-dark
      box-shadow none

  .navbar-nav 
    .open
      .dropdown-menu
        border-top 4px solid primary-dark
        >li
          border-bottom 1px solid secondary-light
          &:last-of-type
            border 0
          >a
            color white
            padding 10px 15px 10px 25px
            &:hover
              background primary
    .active a
      background none
        
@media (min-width: 768px) and (max-width: 1000px) 
  .nav
    li
      .btn
        width 20%