.hero
  background url(images/home-hero.jpg)
  background-size cover
  background-position center center
  min-height 350px
  position relative
  margin-bottom 25px
  .header
    position absolute
    left 20px
    top 50%
    left 50%
    centerPosition(-50%,-50%)
    z-index 15
.hero-header
  color white
  width 50%
  margin 0
  font-size 375%
  span
    &:first-child
      font-size 145%
      display block
      text-transform uppercase
    &:last-child
      font-weight 700
.mask
  cover()
  background RGBA(157, 83, 42, .5)
  z-index 10

@media (max-width: s-break)
  .hero-header
    font-size 50%
    