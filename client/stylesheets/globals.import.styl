body
  color body-text
  @extend .open-sans

h1,
h2,
h3,
h4
  color primary
  font-weight 700

h1
  font-weight 800
  
textarea
  display block
  width 100%
  height 34px
  padding 6px 12px
  font-size 14px
  line-height 1.42857143
  color #555
  background-color #fff
  background-image none
  border 1px solid #ccc
  border-radius 4px
  -webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  -webkit-transition border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s
  -o-transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

.rm-pad
  padding 0

.rm-pad-top
  padding-top 0
  
.rm-pad-btm
  padding-bottom 0

.btn-primary
  makeButton(secondary)

.btn-danger
  makeButton(strong-primary)

.file-upload .btn, 
.file-upload label.btn
  makeButton(secondary)

.button-default[disabled]
.btn[disabled]
  background ll-gray
  color l-gray !important
  @extend .light-shadow

.btn-loading
  &::before
    @extend .icon
    animate(1.5s)
    content '\e031'
    display inline-block
    margin-right 10px
    font-size 12px

.jumbotron
  margin-top 60px
  background #FFF
    
.loading
  loading(true)

@media (max-width: 768px)
  .space-btm
    margin-bottom 40px

select.form-control,
input.form-control,
textarea
  border 2px solid m-gray

input,
textarea,
.form-control
  &:focus
    outline 0
    box-shadow none
    webkit-box-shadow none
    border-color secondary
    

  