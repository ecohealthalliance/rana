body
  color body-text

h1,
h2
  color primary
  
textarea
  display block
  width 100%
  height 34px
  padding 6px 12px
  font-size 14px
  line-height 1.42857143
  color #555
  background-color #fff
  background-image none
  border 1px solid #ccc
  border-radius 4px
  -webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  -webkit-transition border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s
  -o-transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

.rm-pad-top
  padding-top 0
  
.button-default[disabled]
.btn[disabled]
  background ll-gray
  color l-gray !important
  @extend .light-shadow

.btn-loading
  &::before
    @extend .icon
    animate(1.5s)
    content '\e031'
    display inline-block
    margin-right 10px
    font-size 12px
    
.loading
  &::before
    @extend .icon
    animate(1.5s)
    opacity 1
    font-size 60px
    position absolute
    top 50%
    left 45%
    transform translate(-50%, -50%)
    z-index 100
    content '\e031'
    display block
  div
    opacity .7
    transition .2s

@media (max-width: 768px)
  .space-btm
    margin-bottom 30px
