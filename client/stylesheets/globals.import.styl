body
  color body-text
  @extend .open-sans

h1,
h2,
h3,
h4
  color primary
  font-weight 700

h1
  font-weight 800

h2
  font-size 32px
  color primary
  margin-bottom 20px
  margin-top 0

h2.section-title
  font-size 40px
  margin-top 0

h2 a.more-info
  font-size 12px
  color btn-default

h3
  font-size 20px
  margin-top 0
  margin-bottom 15px
  color secondary

h4
  color body-text
  font-weight 600
  font-size 15px

a,
button,
.btn
  transition()
  &:hover
    transition()

a
  color primary
  &:hover
    color secondary

textarea
  display block
  width 100%
  height 34px
  padding 6px 12px
  font-size 14px
  line-height 1.42857143
  color #555
  background-color #fff
  background-image none
  border 1px solid #ccc
  border-radius 4px
  -webkit-box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  box-shadow inset 0 1px 1px rgba(0, 0, 0, .075)
  -webkit-transition border-color ease-in-out .15s, -webkit-box-shadow ease-in-out .15s
  -o-transition border-color ease-in-out .15s, box-shadow ease-in-out .15s
  transition border-color ease-in-out .15s, box-shadow ease-in-out .15s

.rm-pad
  padding 0

.rm-pad-top
  padding-top 0
  
.rm-pad-btm
  padding-bottom 0

.button-default[disabled]
.btn[disabled]
  background ll-gray
  color m-gray
  @extend .light-shadow

.btn-primary
  makeButton(secondary)

.btn-success,
.at-btn
  makeButton(#72b473)

.jumbotron
  margin-top 60px
  background #FFF

.hidden
  display none
  
.showing
  display block
  
.col-sm-0
  width 0%

.space-btm-2
  margin-bottom 20px

.space-btm-4
  margin-bottom 40px

@media (max-width: 768px)
  .add-space-btm
    @extend .space-btm-4

select.form-control,
input.form-control,
textarea,
textarea.form-control
  border 2px solid m-gray

input,
textarea,
.form-control
  &:focus
    outline 0
    box-shadow none
    webkit-box-shadow none
    border-color secondary
  