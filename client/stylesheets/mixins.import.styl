clearFix()
  clear both
  display block
  content ""

addFont(fontTitle, allTypes = true, type = '')
  @font-face
    if allTypes
      src url('/fonts/' + fontTitle + '.eot')
      src url('/fonts/' + fontTitle + '.eot?#iefix') format('embedded-opentype'), url('/fonts/' + fontTitle + '.woff') format('woff'), url('/fonts/{fontTitle}.ttf') format('truetype'), url('/fonts/' + fontTitle + '.svg') format('svg')
    else 
      src url('/fonts/' + fontTitle + '.'+type)
    font-family fontTitle

transition(time = .2s, prop = )
  transition: time prop

vAlign()
  display inline-block
  vertical-align middle  
  
makeButton(color, text = white, dark = false, noOutline = false, hoverColor = white)
  if dark
    @extend .light-shadow
    &:hover
      color hoverColor
  else 
    @extend .dark-shadow
  background color
  color text
  border 1px solid darken(color, 10%)
  &:hover,
  &:focus
    background darken(color, 20%)
    border-color darken(color, 50%)
    color text
  &:active
    background darken(color, 20%)
  transition()
  if noOutline
    &:focus
      outline 0

loading(positioned=false)
  &::before
    @extend .icon
    animate(1.5s)
    if positioned
      position absolute
      top 50%
      left 45%
      centerPosition(-50%,-50%)
      z-index 100
    opacity 1
    font-size 60px
    content '\e031'
  div
    opacity .7
    transition .2s

animate(speed)
  animation spin speed infinite linear
  -webkit-animation spin speed infinite linear
  -moz-animation spin speed infinite linear
  -o-animation spin speed infinite linear

bg(path, w, h, type)
  background url(path + '.' + type) no-repeat
  background-size w h
  width w
  height h
  text-indent -9999px
  @media (-webkit-min-device-pixel-ratio: 2), (-moz-min-device-pixel-ratio: 2)
    background-image: url(path + '-2x.' + type);

centerSmall(margin-bottom=0)
  @media (max-width:400px)
    margin 0 auto
    float none
    display block
    if margin-bottom
      margin-bottom margin-bottom

buttonHover(hoverBG, bg=none)
  transition()
  background bg
  &:hover
    background hoverBG
    color white
    transition()

centerPosition(h,v)
  transform translate(h,v)

cover()
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  z-index 500

addBorder(w=false, h, c)
  if w
    border-{w} unit(h,'px') solid c
  else 
    border unit(h, 'px') solid c

@keyframes spin
  from 
    transform rotate(0deg)
  to 
    transform rotate(360deg)
    
@-webkit-keyframes spin
  from
    -webkit-transform rotate(0deg)
  to 
    -webkit-transform rotate(360deg)
    
@-moz-keyframes spin
  from
    -moz-transform rotate(0deg)
  to 
    -moz-transform rotate(360deg)
    
@-o-keyframes spin
  from
    -o-transform rotate(0deg)
  to 
    -o-transform rotate(360deg)
