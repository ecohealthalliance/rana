template(name="studyFormComplete")

  if type
    +autoForm(
      id="ranavirus-study"
      collection="collections.Studies"
      type=type
      doc=studyDoc
      redirectOnSubmit=urlQuery.redirectOnSubmit
    )

      .report-form.study
        section.rm-pad-btm
          .container
            h2
              p #[span *] Indicates required field
              if eq type 'insert'
                span New Study
              else eq type 'update'
                span  #{study.name} - Update Study

        section.rm-pad-top.rm-pad-btm
          .container
            .row
              .col-sm-4
                +afQuickField name='name'

        if showCSV
          +csvUpload

        section
          +contactInfo

        +permissions

        section.rm-pad-top.form-grp-container.publication
          .container
            +afQuickField name='publicationInfo' id='publicationInfo'

        section.instructions
          .container
            h2 Set default values for the reports in this study.

          +populationInfo

          +species numInvolved=false

        section.rm-pad-top
          +classesMethods study=true

        unless eq type "readonly"
          +submit

  else
    h3 Invalid study id
