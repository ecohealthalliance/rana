template(name="table")
  section.rm-pad-btm
    .container
      button.toggle-filter.btn.btn-primary(href="#") 
        span Filter Tables
        i.fa.fa-filter
      button.export.btn.btn-primary.btn-inline(href="#") 
        span Export
        i.fa.fa-download
      .filter-controls.table-filters.hidden
        +filterControls query=query

  section.rm-pad-top
    .container
      h1 Full Reports
      .table-wrap.reports-table
        +reactiveTable collection="reports" settings=settings filters=filters
  section.rm-pad-top
    .container
      h1 Obfuscated Reports
      .table-wrap.reports-table
        +reactiveTable collection="obfuscatedReports" settings=obfuscatedSettings filters=filters

template(name="noReports")
  h3 No Reports Found
