template(name="header")
  header
    nav.navbar
      .fluid-container
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type="button", data-toggle="collapse" data-target=".navbar-collapse") =
            a.navbar-brand(href="/")
              span M
              h1 Ranavirus #[br] Reporting System
          .navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right
              +navLinks

template(name="navLinks")
  li(class="{{checkActive '/study'}}")
    a(href="/study") Add Study
  li(class="{{checkActive '/studies'}}")
    a(href="/studies") View Studies
  li(class="{{checkActive '/map'}}")
    a(href="/map") Map
  li(class="{{checkActive '/table'}}")
    a(href="/table") View Reports

  li.main-nav-last
    a(href="/group/rana/info") About Ranavirus
  
  if currentUser
    li.nav-icon.dropdown
      a.dropdown-toggle.admin-settings(href="#" data-toggle="dropdown" aria-expanded="false")
        i.fa.fa-gear
        span Settings
      ul.dropdown-menu(role="menu")
        if isInRole 'admin' groupId
          li
            a(href="/group/rana") 
              i.fa.fa-group
              span Group Admin
        +accountsHeaderButtons
  else
    li
      a(href="{{pathFor route='atSignIn'}}" class="sign-in navbar-btn")
        span Sign In 
        i.fa.fa-sign-in
