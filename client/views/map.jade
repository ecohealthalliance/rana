template(name="map")
  .vis-map-container
    #filter-panel
      .panel.panel-default
        .panel-heading
          h3.panel-title Group By
        .panel-body
          select#group-by.form-control
            each groups
              if selected
                option(value=value selected) {{label}}
              else
                option(value=value) {{label}}
      
      +autoForm(
        collection=mapQueries
        doc=mapQuery
        type="update"
        template="bootstrap3"
      )
        +afQuickFields(
          id-prefix=idPrefix
          template="bootstrap3"
        )
        .form-group
          button.btn.btn-primary(type="submit") Apply filters
          button.btn.btn-primary.reset(type="reset") Reset filters
      
    .vis-map
